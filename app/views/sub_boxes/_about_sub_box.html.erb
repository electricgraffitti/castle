<div class="full_row">
	<div class="column_13">
    <h3>
			<%= product.item_name %>
		</h3>
			<% unless product.photos.blank? %>
				<%= image_tag(product.photos.last.attachment.url(:thumb)) %>
			<% end %>
		<p>
			<%= truncate(product.description, :length => 250, :separator => '') %><br /><%= link_to "See more products", products_path %>
		</p>
	</div>
	<div class="column_23 column_right">
		<%= render partial: 'sub_boxes/bullet_list' %>
	</div>
</div>