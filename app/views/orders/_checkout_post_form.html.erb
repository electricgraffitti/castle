<%= form_tag (APP["recurring_url"], :method => "post") do %>
  <%= hidden_field_tag :MerchantID, APP["merchant_id"] %>
  <%= hidden_field_tag :RegKey, APP["reg_key"] %>
  <%= hidden_field_tag :RURL, return_url %>
  <%= hidden_field_tag :Description, "Castle Protection Subscription Fee" %>
  <%= hidden_field_tag :TransType, "CC" %>
  <%= hidden_field_tag :ABAExpire, expiration %>
  <%= hidden_field_tag :AccountNo, cc %>
  <%= hidden_field_tag :AccountName, account_name %>
  <%= hidden_field_tag :RefID, cart.order_id %>
  <%= hidden_field_tag :Amount, cart.total_price %>
  <%= hidden_field_tag :Address, billing_record.address %>
  <%= hidden_field_tag :ZipCode, billing_record.billing_zip %>
  <%= hidden_field_tag :BillingCycle, "M"  %>
  <%= hidden_field_tag :StartDate, Order.start_date %>
  <%= hidden_field_tag :NoOfDebits, "2" %>
  <%= hidden_field_tag :PONumber, "" %>
  <%= hidden_field_tag :TaxAmount, "" %>
  <%= hidden_field_tag :TaxIndicator, "" %>
  <%= submit_tag "Place Your Order", :class => "btn right custom_text" %>
<% end %>