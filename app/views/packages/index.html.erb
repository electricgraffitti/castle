<div class="full_row">
	<h2 class="page_header">Our Complete Systems</h2>
	<% @packages.each do |package| %>
		<div class="column_2">
	  	<div class="product_wrap">	
				<h3>
					<%= (package.name).titleize %> System
				</h3>	
				<%= image_tag(package.photos.last.attachment.url(:small), :class => "blue_bg") %>
				<p class="money blue_text">
					Price: <%= number_to_currency(package.price) %>
				</p>
				<p class="top_hr">
					<%= package.description %>
				</p>
				<%= button_to "Purchase System", cart_items_path(:package_id => package) %>
			</div>
			<% if current_admin %>
				<%= link_to "Edit System Item", edit_package_path(package) %>
			<% end %>
		</div>
	<% end %>		
</div>
<div class="full_row no_top">
  <div class="column_2">

  </div>
  <div class="column_2 cta_wrap">
    <%= link_to "Get Started Today", "", :class => "cta_button custom_text" %>
  </div>
</div>

<% content_for :sub_boxes do %>
	<% render :partial => 'sub_boxes/products_sub_box', :locals => {:blog => @blog} %>
<% end %>