<div class="full_row">
	<h2 class="page_header">Choose Simon XT. Choose Reliability.</h2>
</div>
<div class="full_row no_top">
	<p>
		Get started on securing your home today. Just select one of the packages<br/> that best suits your needs, and you will be on your way to securing your home and your family.
	</p>
</div>
<div class="full_row no_top">
	<% @packages.each do |package| %>
		<div class="column_3 product_wrap">	
			<h3>
				<%= (package.name).titleize %>
			</h3>	
			<%= image_tag(package.photos.last.attachment.url(:showcase), :class => "blue_bg") %>
			<p class="money blue_text">
				Price: <%= number_to_currency(package.price) %>/Month*
			</p>
			<p class="top_hr">
				<%= package.description %>
			</p>
			<h5>This System Comes Standard With:</h5>
      <ul class="package_bullets">
      	<li>(1) - Alarm Keypad/Control Panel</li>
      	<% package.packaged_products.each do |pp| %>
      	  <li>(<%= pp.included_amount %>) - <%= pp.product.item_name %></li>
      	<% end %>
      </ul>
			<div class="button_wrap">
  		  <%= link_to "Select System", products_path(:package_id => package.id), :class => "button red_button tool_tip", :title => "Add #{(package.name).titleize} to Cart" %>
				<% if current_admin %>
					<%= link_to "Edit System Item", edit_package_path(package), :class => "admin_btn" %>
				<% end %>
  		</div>

		</div>

	<% end %>		
</div>
<div class="full_row">
	* Plus applicable tax and each system requires a monthly monitoring agreement. <%= link_to "View agreement here.", "/downloads/terms.pdf", target: '_blank' %>
</div>

<% content_for :sub_boxes do %>
	<% render :partial => 'sub_boxes/products_sub_box', :locals => {:blog => @blog} %>
<% end %>
