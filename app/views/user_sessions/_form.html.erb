<div id="form_box">
  <%= form_for(@user_session) do |f| %>
  	<%= render :partial => "layouts/error_block", :locals => {:object => @user_session} %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field checkbox">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
    <div class="field">
    <%= f.submit "Login", :class => "btn" %><br/>
    </div>
    <div class="field">
      <%= link_to "Forgot my password", password_submit_reset_path %>
    </div>
  <% end %>
</div>
