<% content_for :banner do %>
  <div id="banner" class="full_row">  	
  	<div id="slider" class="index_banner">
      <div class="scroll">
        <div class="scrollContainer">
          <%= render :partial => 'pages/index_banner', :locals => {:banner_id => "1"} %>
          <%= render :partial => 'pages/index_banner', :locals => {:banner_id => "2"} %>
          <%= render :partial => 'pages/index_banner', :locals => {:banner_id => "3"} %>
          <%= render :partial => 'pages/index_banner', :locals => {:banner_id => "4"} %>
        </div>
      </div>
    </div>
    <!-- Banner Nav -->
  	<div class="banner_arrows left_arrow"></div>
    <div class="banner_arrows right_arrow"></div>
  </div>
<% end %>
<div class="full_row no_top">
  <div class="column_2">
    <p class="index_quote">
      "I feel much safer with a Castle<br/>
      Protection alarm system in my home"<br/>
      <span>James Vaughn - Sante Fe, New Mexico</span>
    </p>
  </div>
  <div class="column_2 cta_wrap">
    <%= link_to "Get Started Today", "", :class => "cta_button custom_text" %>
  </div>
</div>
<div id="banner_nav" class="full_row center no_top">
  <ul class="navigation">
    <li><%= link_to "Nav 1", "#banner_1", :class => "banner_nav_1 active" %></li>
    <li><%= link_to "Nav 2", "#banner_2", :class => "banner_nav_2" %></li>
    <li><%= link_to "Nav 3", "#banner_3", :class => "banner_nav_3" %></li>
    <li><%= link_to "Nav 4", "#banner_4", :class => "banner_nav_4" %></li>
  </ul>
  
</div>

<% content_for :sub_boxes do %>
	<% render :partial => 'sub_boxes/home_sub_box', :locals => {:blog => @blog} %>
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      base.indexBanners();
    });
  </script>
<% end %>
	
	