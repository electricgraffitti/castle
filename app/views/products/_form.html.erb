<%= form_for @product, :html => {:multipart => true} do |f| %>
	<%= render :partial => "layouts/error_block", :locals => {:object => @product} %>

  <div class="field">
    <%= f.label :item_name %><br />
    <%= f.text_field :item_name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :alarm_system %><br />
    <%= f.check_box :alarm_system %>
  </div>
  <div class="field">
    <%= f.label :addons %><br />
    <%= f.check_box :addons %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
	<%= f.fields_for :photos do |photo_form| %>
		<div class="field">
			<%= photo_form.label :photo, "Upload an image" %><br />
			<%= photo_form.file_field :attachment, :size => 16 %>
		</div>
	<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
