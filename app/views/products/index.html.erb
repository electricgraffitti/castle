<% content_for :banner do  %>
<div class="full_row">
	<h1 class="index_header">GE Alarm Systems</h1>
	<% @products.each do |product| %>
	<div class="blog_wrap top_hr">		
		<%= image_tag(product.photos.last.attachment.url(:small)) %>
		<h3>
			System Name: <%= (product.item_name).titleize %>
		</h3>
		<p>
			Price: <%= number_to_currency(product.price) %>
		</p>
		<p>
			Features of the <%= product.item_name.titleize %>:
		</p>
		<p>
			<%= product.description %>
		</p>
	</div>
	<% end %>		
</div>
<% end %>

<% content_for :sub_boxes do %>
	<% render :partial => 'sub_boxes/products_sub_box', :locals => {:blog => @blog} %>
<% end %>